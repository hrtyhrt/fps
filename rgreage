wait(30)

local geometryFolder = workspace:FindFirstChild("WORKSPACE_Geometry")

if geometryFolder then
    for _, child in pairs(geometryFolder:GetChildren()) do
        -- Сохраняем только REGION_Silverhills и REGION_RaiderCanyons
        if child.Name ~= "REGION_Silverhills" and child.Name ~= "REGION_RaiderCanyons" then
            child:Destroy()
        end
    end
    print("Все объекты кроме REGION_Silverhills и REGION_RaiderCanyons удалены!")
else
    warn("WORKSPACE_Geometry не найден")
end

local entitiesFolder = workspace:FindFirstChild("WORKSPACE_Entities")

if entitiesFolder then
    for _, child in pairs(entitiesFolder:GetChildren()) do
        if child.Name ~= "Players" then
            child:Destroy()
        end
    end
    print("WORKSPACE_Entities очищен, папка Players сохранена!")
else
    warn("WORKSPACE_Entities не найден")
end

local function optimizeTextures()
    local texturesRemoved = 0
    
    local function removeTextures(object)
        for _, child in ipairs(object:GetChildren()) do
            if child:IsA("Decal") or child:IsA("Texture") or child:IsA("SurfaceGui") then
                child:Destroy()
                texturesRemoved = texturesRemoved + 1
            elseif child:IsA("Part") then
                child.Material = Enum.Material.Plastic
                child.BrickColor = BrickColor.new("Medium stone grey")
            end
            
            if #child:GetChildren() > 0 then
                removeTextures(child)
            end
        end
    end
    
    removeTextures(workspace)
    
    local lighting = game:GetService("Lighting")
    for _, child in ipairs(lighting:GetChildren()) do
        if child:IsA("Sky") or child:IsA("PostEffect") or child:IsA("DepthOfFieldEffect") then
            child:Destroy()
            texturesRemoved = texturesRemoved + 1
        end
    end
    
    print("Оптимизация завершена! Удалено текстурных объектов: " .. texturesRemoved)
end

optimizeTextures()

print("Все операции завершены успешно!")
